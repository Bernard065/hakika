{
  "openapi": "3.0.0",
  "info": {
    "title": "Hakika Auth Service API",
    "description": "Authentication and Authorization API with OTP-based email verification",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:6001/"
    }
  ],
  "tags": [
    {
      "name": "Authentication",
      "description": "User authentication and registration endpoints"
    },
    {
      "name": "OTP",
      "description": "One-Time Password verification operations"
    }
  ],
  "paths": {
    "/": {
      "get": {
        "description": "",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/register": {
      "post": {
        "description": "",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/register/verify": {
      "post": {
        "description": "",
        "responses": {
          "201": {
            "description": "Created"
          }
        }
      }
    },
    "/register/resend-otp": {
      "post": {
        "description": "",
        "responses": {
          "200": {
            "description": "OK"
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "example": "any"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/login": {
      "post": {
        "description": "",
        "responses": {
          "200": {
            "description": "OK"
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "example": "any"
                  },
                  "password": {
                    "example": "any"
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "RegisterUser": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "example": "John Doe"
          },
          "email": {
            "type": "string",
            "example": "user@example.com"
          },
          "password": {
            "type": "string",
            "example": "SecurePass123!"
          },
          "userType": {
            "type": "string",
            "example": "user"
          }
        }
      },
      "RegisterSeller": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "example": "Jane Seller"
          },
          "email": {
            "type": "string",
            "example": "seller@example.com"
          },
          "password": {
            "type": "string",
            "example": "SellerPass123!"
          },
          "userType": {
            "type": "string",
            "example": "seller"
          },
          "phoneNumber": {
            "type": "string",
            "example": "+254712345678"
          },
          "country": {
            "type": "string",
            "example": "Kenya"
          }
        }
      },
      "VerifyOtp": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "example": "user@example.com"
          },
          "otp": {
            "type": "string",
            "example": "123456"
          }
        }
      },
      "Login": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "example": "user@example.com"
          },
          "password": {
            "type": "string",
            "example": "SecurePass123!"
          }
        }
      },
      "ResendOtp": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "example": "user@example.com"
          }
        }
      },
      "SuccessResponse": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "example": "Operation successful"
          }
        }
      },
      "ErrorResponse": {
        "type": "object",
        "properties": {
          "status": {
            "type": "string",
            "example": "error"
          },
          "message": {
            "type": "string",
            "example": "An error occurred"
          }
        }
      },
      "User": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "example": "clx1234567890"
          },
          "email": {
            "type": "string",
            "example": "user@example.com"
          },
          "name": {
            "type": "string",
            "example": "John Doe"
          },
          "userType": {
            "type": "string",
            "example": "user"
          },
          "isVerified": {
            "type": "boolean",
            "example": true
          },
          "createdAt": {
            "type": "string",
            "example": "2024-01-01T00:00:00.000Z"
          }
        }
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "in": "header",
        "bearerFormat": "JWT",
        "description": "JWT Authorization header using Bearer scheme"
      }
    }
  }
}