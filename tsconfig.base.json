{
  "compilerOptions": {
    "composite": true,
    "importHelpers": true,
    "lib": ["es2022"],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "baseUrl": ".",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "customConditions": ["@hakika/source"],
    "paths": {
      "@hakika/shared-types": ["libs/shared/types/dist/index.d.ts"],
      "@hakika/shared-dto": ["libs/shared/dto/dist/index.d.ts"],
      "@hakika/shared-utils": ["libs/shared/utils/dist/index.d.ts"],
      "@hakika/shared-data-access": ["libs/shared/data-access/dist/index.d.ts"],
      "@hakika/auth-api": ["libs/auth/api/dist/index.d.ts"],
      "@hakika/auth-domain": ["libs/auth/domain/dist/index.d.ts"],
      "@hakika/auth-data-access": ["libs/auth/data-access/dist/index.d.ts"]
    }
  }
}